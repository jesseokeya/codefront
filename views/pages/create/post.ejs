<!-- Page Header -->
<div style="overflow-x: hidden;">
  <header class="masthead" style="background-image: url('img/sample.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="page-heading">
            <h1>Create</h1>
            <span class="subheading">Create Contents For Your Blog</span>
          </div>
        </div>
      </div>
    </div>
  </header>
  <div class="container">
    <div class="contain-button">
      <br />
      <div id="alertMessage"></div>
      <br />
      <div class="form-group">
        <input type="text" class="form-control" id="postTitle" aria-describedby="title" placeholder="Title" />
      </div>

      <div class="form-group">
        <input type="text" class="form-control" id="postAuthor" aria-describedby="author" placeholder="Author" />
      </div>

      <div class="form-group">
        <input type="text" class="form-control" id="postHeading" aria-describedby="heading" placeholder="Heading" />
      </div>

      <div class="form-group">
        <input type="text" class="form-control" id="postSubHeading" aria-describedby="subheading" placeholder="Subheading" />
      </div>

      <div class="form-group">
        <textarea placeholder="Post contents. Use ' [insert image] ' to add images. Images should be alone on a paragraph" class="form-control" id="postContent" rows="18"></textarea>
      </div>
      <br />
      <div class="row" id="displayUploadedImages"></div>
      <br />
      <div class="form-group">
        <div class="progress">
          <div id="uploadProgress" class="progress-bar progress-bar-striped bg-info" role="progressbar" style="width: 0%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <br />
        <input type="file" class="form-control-file" id="imageUpload" aria-describedby="fileHelp" multiple />
        <small id="fileHelp" class="form-text text-dark">Upload Images For Your Blog Post Maximum Of 2</small>
      </div>
      <br />
      <button onclick="handleSubmit()" type="button" class="btn btn-primary btn-block">
      Create Post
    </button>
      <br />
      <br />

    </div>
  </div>
</div>
